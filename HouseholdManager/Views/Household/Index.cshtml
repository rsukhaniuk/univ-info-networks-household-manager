@model IEnumerable<HouseholdManager.Models.Entities.Household>
@using HouseholdManager.Models.Enums
@using Microsoft.AspNetCore.Identity
@inject UserManager<HouseholdManager.Models.Entities.ApplicationUser> UserManager

@{
    ViewData["Title"] = "My Households";
    var currentUser = await UserManager.GetUserAsync(User);
    var isSystemAdmin = currentUser?.IsSystemAdmin ?? false;
}

<div class="container">
    <div class="row justify-content-center mb-4">
        <div class="col-lg-10">
            <div class="d-flex justify-content-between align-items-center flex-wrap">
                <div class="text-center text-lg-start">
                    <h1 class="h3 mb-1">
                        <i class="fas fa-home text-primary me-2"></i>
                        @if (isSystemAdmin)
                        {
                            <span>All Households</span>
                            <span class="badge bg-danger ms-2">System Admin</span>
                        }
                        else
                        {
                            <span>My Households</span>
                        }
                    </h1>
                    <p class="text-muted mb-0">
                        @if (isSystemAdmin)
                        {
                            <span>System-wide household management</span>
                        }
                        else
                        {
                            <span>Manage and view your household memberships</span>
                        }
                    </p>
                </div>

                <!-- Action Buttons -->
                @if (!isSystemAdmin)
                {
                    <div class="btn-group" role="group">
                        <a asp-action="Upsert" class="btn btn-primary btn-lg">
                            <i class="fas fa-plus me-1"></i>
                            Create Household
                        </a>
                        <a asp-action="Join" class="btn btn-success btn-lg ms-2">
                            <i class="fas fa-key me-1"></i>
                            Join Household
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Success/Error Messages -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-triangle me-2"></i>
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Households Table -->
    <div class="row justify-content-center">
        <div class="col-lg-10">
            @if (!Model.Any())
            {
                <!-- Empty State -->
                <div class="card shadow-sm">
                    <div class="card-body text-center py-5">
                        <i class="fas fa-home fa-3x text-muted mb-3"></i>
                        <h4 class="text-muted">No Households Found</h4>
                        <p class="text-muted mb-4">
                            @if (isSystemAdmin)
                            {
                                <span>No households have been created in the system yet.</span>
                            }
                            else
                            {
                                <span>You're not a member of any households yet. Create your first household or join an existing one!</span>
                            }
                        </p>

                        @if (!isSystemAdmin)
                        {
                            <div class="d-flex justify-content-center gap-2">
                                <a asp-action="Upsert" class="btn btn-primary btn-lg">
                                    <i class="fas fa-plus me-1"></i>
                                    Create Household
                                </a>
                                <a asp-action="Join" class="btn btn-outline-primary btn-lg">
                                    <i class="fas fa-key me-1"></i>
                                    Join Household
                                </a>
                            </div>
                        }
                    </div>
                </div>
            }
            else
            {
                <!-- DataTable -->
                <div class="card shadow-sm">
                    <div class="card-body">
                        <table id="householdsTable" class="table table-hover" style="width:100%">
                            <thead>
                                <tr>
                                    <th><i class="fas fa-home me-1"></i>Household</th>
                                    <th><i class="fas fa-users me-1"></i>Members</th>
                                    <th><i class="fas fa-calendar me-1"></i>Created</th>
                                    @if (isSystemAdmin)
                                    {
                                        <th><i class="fas fa-crown me-1"></i>Owner</th>
                                    }
                                    else
                                    {
                                        <th><i class="fas fa-user-tag me-1"></i>My Role</th>
                                    }
                                    <th data-orderable="false"><i class="fas fa-cogs me-1"></i>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var household in Model)
                                {
                                    var userMembership = household.Members.FirstOrDefault(m => m.UserId == currentUser?.Id);
                                    var isOwner = userMembership?.IsOwner ?? false;
                                    var householdOwner = household.Members.FirstOrDefault(m => m.IsOwner);

                                    <tr>
                                        <!-- Household Name -->
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="bg-primary rounded-circle d-flex align-items-center justify-content-center me-3"
                                                     style="width: 40px; height: 40px;">
                                                    <i class="fas fa-home text-white"></i>
                                                </div>
                                                <div>
                                                    <h6 class="mb-0">
                                                        <a asp-action="Details" asp-route-id="@household.Id"
                                                           class="text-decoration-none">
                                                            @household.Name
                                                        </a>
                                                    </h6>
                                                    @if (!string.IsNullOrEmpty(household.Description))
                                                    {
                                                        <small class="text-muted">@household.Description</small>
                                                    }
                                                </div>
                                            </div>
                                        </td>

                                        <!-- Member Count -->
                                        <td>
                                            <span class="badge bg-info rounded-pill">
                                                @household.MemberCount
                                            </span>
                                        </td>

                                        <!-- Created Date -->
                                        <td data-order="@household.CreatedAt.ToString("yyyy-MM-dd")">
                                            <span class="text-muted">
                                                @household.CreatedAt.ToLocalDateShort()
                                            </span>
                                            <br>
                                            <small class="text-muted">
                                                @household.CreatedAt.ToLocalTimeString()
                                            </small>
                                        </td>

                                        <!-- Role/Owner Column -->
                                        <td>
                                            @if (isSystemAdmin)
                                            {
                                                @if (householdOwner != null)
                                                {
                                                    <div class="d-flex align-items-center">
                                                        <i class="fas fa-crown text-warning me-1"></i>
                                                        <span>@householdOwner.User.FullName</span>
                                                    </div>
                                                    <small class="text-muted">@householdOwner.User.Email</small>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">No owner</span>
                                                }
                                            }
                                            else
                                            {
                                                @if (isOwner)
                                                {
                                                    <span class="badge bg-warning text-dark">
                                                        <i class="fas fa-crown me-1"></i>
                                                        Owner
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">
                                                        <i class="fas fa-user me-1"></i>
                                                        Member
                                                    </span>
                                                }
                                            }
                                        </td>

                                        <!-- Actions -->
                                        <td>
                                            <div class="btn-group btn-group-sm" role="group">
                                                <!-- Details Button -->
                                                <a asp-action="Details" asp-route-id="@household.Id"
                                                   class="btn btn-outline-primary" title="View Details">
                                                    <i class="fas fa-eye"></i>
                                                </a>

                                                @if (isSystemAdmin)
                                                {
                                                    <!-- System Admin Actions -->
                                                    <button type="button" class="btn btn-outline-danger"
                                                            data-bs-toggle="modal"
                                                            data-bs-target="#deleteModal"
                                                            data-household-id="@household.Id"
                                                            data-household-name="@household.Name"
                                                            title="Delete Household">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                }
                                                else if (isOwner)
                                                {
                                                    <!-- Owner Actions -->
                                                    <a asp-action="Upsert" asp-route-id="@household.Id"
                                                       class="btn btn-outline-warning" title="Edit Household">
                                                        <i class="fas fa-edit"></i>
                                                    </a>

                                                    <button type="button" class="btn btn-outline-danger"
                                                            data-bs-toggle="modal"
                                                            data-bs-target="#deleteModal"
                                                            data-household-id="@household.Id"
                                                            data-household-name="@household.Name"
                                                            title="Delete Household">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                }
                                                else
                                                {
                                                    <!-- Member Actions -->
                                                    <button type="button" class="btn btn-outline-secondary"
                                                            data-bs-toggle="modal"
                                                            data-bs-target="#leaveModal"
                                                            data-household-id="@household.Id"
                                                            data-household-name="@household.Name"
                                                            title="Leave Household">
                                                        <i class="fas fa-sign-out-alt"></i>
                                                    </button>
                                                }
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header border-0">
                <h5 class="modal-title text-danger" id="deleteModalLabel">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    Delete Household
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p class="mb-3">Are you sure you want to delete the household <strong id="deleteHouseholdName"></strong>?</p>
                <div class="alert alert-warning">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    <strong>Warning:</strong> This action cannot be undone. All rooms, tasks, and execution history will be permanently deleted.
                </div>
            </div>
            <div class="modal-footer border-0">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form id="deleteForm" method="post" style="display: inline;">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash me-1"></i>
                        Delete Household
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Leave Confirmation Modal -->
<div class="modal fade" id="leaveModal" tabindex="-1" aria-labelledby="leaveModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header border-0">
                <h5 class="modal-title text-warning" id="leaveModalLabel">
                    <i class="fas fa-sign-out-alt me-2"></i>
                    Leave Household
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p class="mb-3">Are you sure you want to leave the household <strong id="leaveHouseholdName"></strong>?</p>
                <div class="alert alert-info">
                    <i class="fas fa-info-circle me-2"></i>
                    You can rejoin this household later using the invite code, if available.
                </div>
            </div>
            <div class="modal-footer border-0">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form id="leaveForm" method="post" style="display: inline;">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-warning">
                        <i class="fas fa-sign-out-alt me-1"></i>
                        Leave Household
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Initialize DataTable
            $('#householdsTable').DataTable({
                responsive: true,
                pageLength: 10,
                lengthMenu: [[5, 10, 25, 50, -1], [5, 10, 25, 50, "All"]],
                order: [[2, 'desc']], // Sort by created date descending
                language: {
                    search: "_INPUT_",
                    searchPlaceholder: "Search households...",
                    lengthMenu: "Show _MENU_ households",
                    info: "Showing _START_ to _END_ of _TOTAL_ households",
                    infoEmpty: "No households found",
                    infoFiltered: "(filtered from _MAX_ total households)",
                    emptyTable: "No households available",
                    zeroRecords: "No matching households found"
                },
                dom: '<"row"<"col-sm-12 col-md-6"l><"col-sm-12 col-md-6"f>>' +
                     '<"row"<"col-sm-12"tr>>' +
                     '<"row"<"col-sm-12 col-md-5"i><"col-sm-12 col-md-7"p>>',
                columnDefs: [
                    {
                        targets: -1, // Last column (Actions)
                        orderable: false,
                        searchable: false
                    },
                    {
                        targets: 1, // Member count column
                        type: 'num'
                    }
                ]
            });

            // Modal handlers
            $('#deleteModal').on('show.bs.modal', function (event) {
                const button = $(event.relatedTarget);
                const householdId = button.data('household-id');
                const householdName = button.data('household-name');

                $('#deleteHouseholdName').text(householdName);
                $('#deleteForm').attr('action', '@Url.Action("Delete", "Household")/' + householdId);
            });

            $('#leaveModal').on('show.bs.modal', function (event) {
                const button = $(event.relatedTarget);
                const householdId = button.data('household-id');
                const householdName = button.data('household-name');

                $('#leaveHouseholdName').text(householdName);
                $('#leaveForm').attr('action', '@Url.Action("Leave", "Household")/' + householdId);
            });

            // Auto-hide alerts after 5 seconds
            setTimeout(function() {
                $('.alert').alert('close');
            }, 5000);
        });
    </script>
}