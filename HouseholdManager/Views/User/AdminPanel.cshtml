<!-- Delete User Modal - ОДНЕ ВІКНО ДЛЯ ВСІХ -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    Delete User
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form asp-action="DeleteUser" method="post" id="deleteForm">
                @Html.AntiForgeryToken()
                <input type="hidden" name="userId" id="deleteUserId" />

                <div class="modal-body">
                    <div class="alert alert-danger">
                        <strong>Warning:</strong> This action cannot be undone!
                    </div>

                    <p>
                        Are you sure you want to delete user <strong id="deleteUserName"></strong>?
                    </p>

                    <p class="text-muted mb-0">
                        This will permanently remove:
                    </p>
                    <ul class="text-muted">
                        <li>All user data and profile information</li>
                        <li>Household memberships</li>
                        <li>Task assignments and execution history</li>
                    </ul>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        Cancel
                    </button>
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash me-1"></i>
                        Delete User
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .avatar-circle {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-shrink: 0;
    }
</style>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Auto-hide alerts after 5 seconds
            setTimeout(function() {
                $('.alert-dismissible').alert('close');
            }, 5000);

            // Handle Role Modal
            $('#roleModal').on('show.bs.modal', function (event) {
                const button = $(event.relatedTarget);
                const userId = button.data('user-id');
                const userName = button.data('user-name');
                const userRole = button.data('user-role');

                $('#roleUserId').val(userId);
                $('#roleUserName').text(userName);
                $('#roleSelect').val(userRole);
            });

            // Handle Delete Modal
            $('#deleteModal').on('show.bs.modal', function (event) {
                const button = $(event.relatedTarget);
                const userId = button.data('user-id');
                const userName = button.data('user-name');

                $('#deleteUserId').val(userId);
                $('#deleteUserName').text(userName);
            });
        });
    </script>
}