@model HouseholdManager.Models.ViewModels.AdminPanelViewModel
@using HouseholdManager.Models.Enums
@using System.Security.Claims

@{
    ViewData["Title"] = "Admin Panel";
    var currentUserId = User.FindFirstValue(ClaimTypes.NameIdentifier);

}

<div class="container py-4">
    <div class="row mb-4">
        <div class="col text-center">
            <h1 class="h2 mb-1">
                <i class="fas text-danger me-2"></i>Admin Panel
            </h1>
            <p class="text-muted mb-0">Manage all users and system settings</p>
        </div>
    </div>

    <!-- Success/Error Messages -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-triangle me-2"></i>
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Search Bar - Зліва -->
    <div class="row mb-4">
        <div class="col-lg-6">
            <form asp-action="AdminPanel" method="get" class="input-group">
                <input type="text" name="search" class="form-control"
                       placeholder="Search users by name or email..."
                       value="@Model.SearchQuery">
                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-search me-1"></i>Search
                </button>
                @if (!string.IsNullOrEmpty(Model.SearchQuery))
                {
                    <a asp-action="AdminPanel" class="btn btn-outline-secondary">
                        <i class="fas fa-times me-1"></i>Clear
                    </a>
                }
            </form>
        </div>
    </div>

    <!-- Users Table -->
    <div class="card shadow-sm">
        <div class="card-header bg-light">
            <h5 class="card-title mb-0">
                <i class="fas fa-users me-2"></i>
                All Users
                <span class="badge bg-secondary ms-2">@Model.Users.Count</span>
            </h5>
        </div>
        <div class="card-body p-0">
            @if (!Model.Users.Any())
            {
                <div class="text-center py-5 text-muted">
                    <i class="fas fa-users fa-2x mb-2"></i>
                    <p class="mb-0">No users found</p>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th style="width: 30%;">User</th>
                                <th style="width: 25%;">Email</th>
                                <th style="width: 15%;">Role</th>
                                <th style="width: 15%;">Created</th>
                                <th style="width: 15%;" class="text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model.Users)
                            {
                                <tr>
                                    <td class="align-middle">
                                        <div class="d-flex align-items-center">
                                            <div class="avatar-circle bg-primary text-white me-2">
                                                <i class="fas fa-user"></i>
                                            </div>
                                            <div>
                                                <strong>@(user.FullName ?? "No Name")</strong>
                                                <br>
                                                <small class="text-muted">@user.UserName</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="align-middle">
                                        <a href="mailto:@user.Email" class="text-decoration-none">
                                            @user.Email
                                        </a>
                                    </td>
                                    <td class="align-middle">
                                        @if (user.Role == SystemRole.SystemAdmin)
                                        {
                                            <span class="badge bg-danger">
                                                <i class="fas fa-crown me-1"></i>System Admin
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-primary">
                                                <i class="fas fa-user me-1"></i>User
                                            </span>
                                        }
                                    </td>
                                    <td class="align-middle">
                                        <small class="text-muted">
                                            @user.CreatedAt.ToString("MMM dd, yyyy")
                                        </small>
                                    </td>
                                    <td class="align-middle text-end">
                                        @if (user.Id != currentUserId)
                                        {
                                            <div class="btn-group" role="group">
                                                <!-- Delete User Button -->
                                                <button type="button" class="btn btn-sm btn-outline-danger"
                                                        data-bs-toggle="modal"
                                                        data-bs-target="#deleteModal"
                                                        data-user-id="@user.Id"
                                                        data-user-name="@(user.FullName ?? user.Email)"
                                                        title="Delete User">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </div>
                                        }
                                        else
                                        {
                                            <span class="text-muted small">
                                                <i class="fas fa-user-shield me-1"></i>You
                                            </span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

