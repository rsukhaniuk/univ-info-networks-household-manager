@model HouseholdManager.Models.ViewModels.UpsertRoomViewModel

@{
    ViewData["Title"] = Model.PageTitle;
}

<div class="container py-4">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a asp-controller="Household" asp-action="Index" class="text-decoration-none">
                    <i class="fas fa-home me-1"></i>My Households
                </a>
            </li>
            <li class="breadcrumb-item">
                <a asp-controller="Household" asp-action="Details" asp-route-id="@Model.HouseholdId" class="text-decoration-none">
                    @Model.HouseholdName
                </a>
            </li>
            <li class="breadcrumb-item">
                <a asp-controller="Room" asp-action="Index" asp-route-householdId="@Model.HouseholdId" class="text-decoration-none">
                    Rooms
                </a>
            </li>
            @if (Model.IsEdit)
            {
                <li class="breadcrumb-item">
                    <a asp-action="Details" asp-route-id="@Model.Id" class="text-decoration-none">
                        @Model.Name
                    </a>
                </li>
            }
            <li class="breadcrumb-item active" aria-current="page">@(Model.IsEdit ? "Edit" : "Create")</li>
        </ol>
    </nav>

    <!-- Page Header -->
    <div class="row justify-content-center mb-4">
        <div class="col-lg-8 col-xl-6">
            <div class="text-center">
                <h1 class="h3 mb-1">
                    <i class="@Model.SubmitIcon text-success me-2"></i>
                    @Model.PageTitle
                </h1>
                <p class="text-muted mb-0">
                    @if (Model.IsEdit)
                    {
                        <span>Update room information for @Model.HouseholdName</span>
                    }
                    else
                    {
                        <span>Add a new room to @Model.HouseholdName</span>
                    }
                </p>
            </div>
        </div>
    </div>

    <!-- Form Container -->
    <div class="row justify-content-center">
        <div class="col-lg-8 col-xl-6">
            <div class="card shadow-sm">
                <div class="card-body p-4">
                    <form asp-action="Upsert" method="post" enctype="multipart/form-data" novalidate>
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <!-- Hidden fields -->
                        <input asp-for="Id" type="hidden" />
                        <input asp-for="HouseholdId" type="hidden" />
                        <input asp-for="HouseholdName" type="hidden" />
                        <input asp-for="IsEdit" type="hidden" />
                        <input asp-for="PhotoPath" type="hidden" />

                        <!-- Room Name -->
                        <div class="mb-4">
                            <label asp-for="Name" class="form-label fw-semibold">
                                <i class="fas fa-door-open text-success me-2"></i>
                                Room Name <span class="text-danger">*</span>
                            </label>
                            <input asp-for="Name" class="form-control form-control-lg"
                                   placeholder="e.g., Living Room, Kitchen, Master Bedroom" />
                            <span asp-validation-for="Name" class="text-danger small"></span>
                            <div class="form-text">
                                <i class="fas fa-info-circle me-1"></i>
                                Choose a descriptive name that's unique within this household
                            </div>
                        </div>

                        <!-- Description -->
                        <div class="mb-4">
                            <label asp-for="Description" class="form-label fw-semibold">
                                <i class="fas fa-align-left text-info me-2"></i>
                                Description <span class="text-muted">(optional)</span>
                            </label>
                            <textarea asp-for="Description" class="form-control" rows="3"
                                      placeholder="Add any additional details about this room..."></textarea>
                            <span asp-validation-for="Description" class="text-danger small"></span>
                            <div class="form-text">
                                <i class="fas fa-info-circle me-1"></i>
                                Describe the room's purpose, size, or any special notes
                            </div>
                        </div>

                        <!-- Photo Section -->
                        <div class="mb-4">
                            <label class="form-label fw-semibold">
                                <i class="fas fa-camera text-primary me-2"></i>
                                Room Photo <span class="text-muted">(optional)</span>
                            </label>

                            @if (Model.IsEdit && !string.IsNullOrEmpty(Model.PhotoPath))
                            {
                                <!-- Current Photo Preview -->
                                <div class="current-photo-section mb-3">
                                    <div class="d-flex align-items-center justify-content-between mb-2">
                                        <span class="badge bg-info">
                                            <i class="fas fa-image me-1"></i>Current Photo
                                        </span>
                                        <small class="text-muted">Upload a new photo to replace this one</small>
                                    </div>
                                    <div class="text-center p-3" style="background-color: #f8f9fa; border-radius: 8px;">
                                        <img src="~/@Model.PhotoPath" alt="@Model.Name"
                                             class="img-fluid rounded shadow-sm" style="max-height: 200px; max-width: 100%;">
                                    </div>
                                </div>
                            }

                            <!-- Photo Upload Input -->
                            <div class="photo-upload-section">
                                <input type="file" name="photo" id="photoInput" class="form-control"
                                       accept="image/*" onchange="previewPhoto(this)" />
                                <div class="form-text">
                                    <i class="fas fa-info-circle me-1"></i>
                                    @if (Model.IsEdit && !string.IsNullOrEmpty(Model.PhotoPath))
                                    {
                                        <span>Upload a new photo to replace the current one. Supported formats: JPG, PNG, GIF, WebP. Max size: 5MB</span>
                                    }
                                    else if (Model.IsEdit)
                                    {
                                        <span>Upload a photo for this room. Supported formats: JPG, PNG, GIF, WebP. Max size: 5MB</span>
                                    }
                                    else
                                    {
                                        <span>Supported formats: JPG, PNG, GIF, WebP. Max size: 5MB</span>
                                    }
                                </div>
                            </div>

                            <!-- New Photo Preview -->
                            <div id="newPhotoPreview" class="mt-3" style="display: none;">
                                <div class="d-flex align-items-center justify-content-between mb-2">
                                    <span class="badge bg-success">
                                        <i class="fas fa-upload me-1"></i>New Photo Selected
                                    </span>
                                    <button type="button" class="btn btn-sm btn-outline-secondary" onclick="clearPhotoSelection()">
                                        <i class="fas fa-times me-1"></i>Clear
                                    </button>
                                </div>
                                <div class="text-center p-3" style="background-color: #f8f9fa; border-radius: 8px;">
                                    <img id="newPhotoImg" class="img-fluid rounded shadow-sm"
                                         style="max-height: 200px; max-width: 100%;">
                                </div>
                            </div>
                        </div>

                        <!-- Form Actions -->
                        <div class="row g-3 mt-4">
                            <div class="col-sm-6">
                                @if (Model.IsEdit)
                                {
                                    <a asp-action="Details" asp-route-id="@Model.Id"
                                       class="btn btn-outline-secondary w-100">
                                        <i class="fas fa-times me-2"></i>Cancel
                                    </a>
                                }
                                else
                                {
                                    <a asp-action="Index" asp-route-householdId="@Model.HouseholdId"
                                       class="btn btn-outline-secondary w-100">
                                        <i class="fas fa-times me-2"></i>Cancel
                                    </a>
                                }
                            </div>
                            <div class="col-sm-6">
                                <button type="submit" class="btn @Model.SubmitClass btn-lg w-100">
                                    <i class="@Model.SubmitIcon me-2"></i>@Model.SubmitText
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        // Photo preview functionality
        function previewPhoto(input) {
            const file = input.files[0];
            if (file) {
                // Validate file size (5MB limit)
                if (file.size > 5 * 1024 * 1024) {
                    alert('File size must be less than 5MB');
                    input.value = '';
                    return;
                }

                // Validate file type
                const validTypes = ['image/jpeg', 'image/jpg', 'image/png', 'image/gif', 'image/webp'];
                if (!validTypes.includes(file.type.toLowerCase())) {
                    alert('Please select a valid image file (JPG, PNG, GIF, or WebP)');
                    input.value = '';
                    return;
                }

                // Show preview
                const reader = new FileReader();
                reader.onload = function(e) {
                    document.getElementById('newPhotoImg').src = e.target.result;
                    document.getElementById('newPhotoPreview').style.display = 'block';

                    // Dim current photo if exists
                    const currentPhotoSection = document.querySelector('.current-photo-section');
                    if (currentPhotoSection) {
                        currentPhotoSection.style.opacity = '0.6';
                        currentPhotoSection.style.transition = 'opacity 0.3s ease';
                    }
                };
                reader.readAsDataURL(file);
            }
        }

        function clearPhotoSelection() {
            // Clear file input
            document.getElementById('photoInput').value = '';

            // Hide preview
            document.getElementById('newPhotoPreview').style.display = 'none';

            // Restore current photo opacity
            const currentPhotoSection = document.querySelector('.current-photo-section');
            if (currentPhotoSection) {
                currentPhotoSection.style.opacity = '1';
            }
        }
    </script>
}