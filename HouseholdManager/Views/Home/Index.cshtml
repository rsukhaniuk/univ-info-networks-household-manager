@{
    ViewData["Title"] = "Home";
}

<!-- Hero Section -->
<section class="bg-primary text-white py-5">
    <div class="container py-5">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="display-4 fw-bold mb-4">Household Manager</h1>
                <p class="lead mb-4">
                    Organize household tasks, assign chores to family members,
                    and track progress together. Make home management simple and effective.
                </p>

                @if (User.Identity?.IsAuthenticated == true)
                {
                    <a href="/Dashboard" class="btn btn-light btn-lg me-3">
                        <i class="fas fa-tachometer-alt me-2"></i>Go to Dashboard
                    </a>
                }
                else
                {
                    <a href="/Identity/Account/Register" class="btn btn-light btn-lg me-3">
                        <i class="fas fa-rocket me-2"></i>Get Started Free
                    </a>
                    <a href="/Identity/Account/Login" class="btn btn-outline-light btn-lg">
                        <i class="fas fa-sign-in-alt me-2"></i>Sign In
                    </a>
                }
            </div>
            <div class="col-lg-6 text-center">
                <i class="fas fa-home display-1 opacity-75"></i>
            </div>
        </div>
    </div>
</section>

<!-- Features Section -->
<section class="py-5 bg-light">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="fw-bold">Why Choose Household Manager?</h2>
            <p class="lead text-muted">Simple tools to keep your home organized and your family happy</p>
        </div>

        <div class="row g-4">
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body text-center p-4">
                        <div class="bg-primary bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
                            <i class="fas fa-users fa-2x text-primary"></i>
                        </div>
                        <h4 class="fw-bold">Family Collaboration</h4>
                        <p class="text-muted">Create households, invite family members, and work together to maintain a clean and organized home.</p>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body text-center p-4">
                        <div class="bg-success bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
                            <i class="fas fa-tasks fa-2x text-success"></i>
                        </div>
                        <h4 class="fw-bold">Task Management</h4>
                        <p class="text-muted">Create tasks organized by rooms, assign them to household members, and keep track of what needs to be done.</p>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body text-center p-4">
                        <div class="bg-info bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
                            <i class="fas fa-camera fa-2x text-info"></i>
                        </div>
                        <h4 class="fw-bold">Progress Tracking</h4>
                        <p class="text-muted">Mark tasks as complete, add photos of results, and view completion history for your household.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Call to Action -->
@if (User.Identity?.IsAuthenticated != true)
{
    <section class="py-5 bg-white">
        <div class="container text-center">
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <h3 class="fw-bold mb-3">Ready to Get Organized?</h3>
                    <p class="lead text-muted mb-4">Join families who have simplified their household management with our platform.</p>
                    <a href="/Identity/Account/Register" class="btn btn-primary btn-lg">
                        <i class="fas fa-user-plus me-2"></i>Create Your Account Today
                    </a>
                </div>
            </div>
        </div>
    </section>
}